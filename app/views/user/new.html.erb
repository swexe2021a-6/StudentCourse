<div class = "form_block">
<h1>新規登録</h1>
<%= form_for @user, url: {action: :create} do |f| %>
  <%= f.label :student_num, '学籍番号'%> 
  <%= f.text_field :student_num %><br>
  <%= f.label :password, 'パスワード' %> 
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation, 'パスワード（確認）' %> 
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit '登録' %>
<% end %>
</div>

<style>
/* フォームの外枠～フォーム全体の位置調整 */
.form_block {
  position: absolute;
  top: 20%;
  left: 35%;
  width: 400px;
  height: auto;
  padding: 20px;
  background-color: #1b9bff;
}
 
/* フォームブロックの表題スタイル */
.form_block h1 {
  font-size: 28px;
  text-align: center;
}
 
form {
  padding: 12px;
  background-color: #1b9bff;
}
 
form input {
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 32px;
  margin-bottom: 12px;
  padding: 3px 10px;
  font-size: 16px;
}
 
form button {
  display: block;
  width: 50%;
  margin-top: 10px;
  margin-left: auto;
  padding: 10px;
  background-color: #ccc;
  font-size: 16px;
}
</style>