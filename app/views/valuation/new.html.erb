<% if flash[:notice] %>
   <%= flash[:notice] %>
<% end %>

<% if @valuation.errors.present? %>
<h3>エラーがあります</h3>
<ul>
  <% @valuation.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<div class="title">
  <b><%= @management.subject %></b>
</div>
<%= form_for @valuation, url: {action: :create} do |f| %>
<br>
<div class="main">
  <%= f.label :comment, 'コメント　(300字以内)' %><br>
  <%= f.text_area :comment ,:size=>"60x5"%><br><br>
  <%= f.label :star, '評価　(最大100点)' %> <br>
  <%= f.text_field :star %>点<br>
  <%= hidden_field_tag :id, params[:id] %><br>
  <%= f.submit '登録' %>
</div>
<% end %>

<style>
.title{
font-size:24pt;
margin-left:10px;
}
.main{
margin-left:20px;
}
</style>