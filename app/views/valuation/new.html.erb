<% if flash[:notice] %>
   <%= flash[:notice] %>
<% end %>

<%= form_for @valuation, url: {action: :create} do |f| %>
  <%= f.label :comment, 'コメント' %> 
  <%= f.text_field :comment %> 
  <%= f.label :star, '評価' %> 
  <%= f.text_field :star %>
  <%= hidden_field_tag :id, params[:id] %>
  <%= f.submit '登録' %>
<% end %>