<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<h1>ログイン</h1>
<%= form_tag top_login_path, method: :post do %>
  <%= label_tag :student_num, '学籍番号' %> 
  <%= text_field_tag :student_num %><br>
  <%= label_tag :pass, 'パスワード' %> 
  <%= password_field_tag :pass %> 
  <%= submit_tag 'ログイン' %>
<% end %>